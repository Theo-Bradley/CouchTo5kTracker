             x:Class="CouchTo5kTracker.CurrentRunPage">
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout>
                <Frame BackgroundColor="#1476D2" CornerRadius="0" Padding="5" AbsoluteLayout.LayoutBounds="0, 0, 1, 0.138" AbsoluteLayout.LayoutFlags="All">
                    <Button x:Name="BackButton" BackgroundColor="#1476D2" Scale="0.5" HorizontalOptions="Start" VerticalOptions="CenterAndExpand" Padding="0" Margin="-15,0" Pressed="BackButton_Pressed"/>
